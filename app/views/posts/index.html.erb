
<div class="container">
    <% @posts.each do |post| %>
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title"><%= post.title %></span>
                        <p><%= post.body %></p>
                    </div>
                </div>
            </div>
        </div>
        <% if current_user && current_user.role == "admin" %>
            <%= link_to "Edit post", edit_post_path(post) %>
        <% end %>
    <% end %>
</div>




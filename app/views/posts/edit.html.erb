<div class="container">
    <%= form_with model: @post do |f| %>
        <div class="row">
            <div class="input-field col s6">
                <%= f.text_field :title, class: "validate" %>
                <%= f.label :title %>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <%= f.rich_text_area :body, class: "custom-size" %>
            </div>
        </div>
        <div>
            <button class="btn waves-effect waves-light new-post-submit" type="submit">Submit</button>
        </div>
    <% end %>
</div>